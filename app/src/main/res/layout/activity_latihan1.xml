<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".Latihan1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Penjumlahan Sederhana"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/lblTop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angka Pertama"
        android:id="@+id/lblA1"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txt_angka1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angka Kedua"
        android:id="@+id/lblA2"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txt_angka2" />

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Tampilkan Hasil"
        android:id="@+id/btnHasil"
        android:layout_gravity="center"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="HASIL"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/txt_angkahasil" />

</LinearLayout>